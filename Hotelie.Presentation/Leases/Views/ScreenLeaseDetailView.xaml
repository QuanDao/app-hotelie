<UserControl x:Class="Leases.Views.ScreenLeaseDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hotelie.Presentation"
             xmlns:commonConverters="clr-namespace:Hotelie.Presentation.Common.Converters"
             xmlns:converters="clr-namespace:Hotelie.Presentation.Leases.Converters"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cal="http://www.caliburnproject.org"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1024">
    <!--Resources-->
    <UserControl.Resources>
        <ResourceDictionary>
            <commonConverters:DecimalToCurrencyStringConverter x:Key="DecimalToCurrencyStringConverter" />
            <commonConverters:DateTimeToShortDateStringConverter x:Key="DateTimeToShortDateStringConverter" />
            <converters:LeaseIdStringDisplayConverter x:Key="LeaseIdStringDisplayConverter" />
        </ResourceDictionary>
    </UserControl.Resources>

    <!--Content-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--Title bar-->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryDark"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--Back button-->
                <Button Grid.Row="0" Grid.Column="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Margin="16 24 0 0" Style="{DynamicResource MaterialDesignToolButton}"
                        cal:Message.Attach="PreviewExitAsync">
                    <materialDesign:PackIcon Width="24" Height="24"
                                             Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                                             Kind="KeyboardBackspace" />
                </Button>

                <!--Content-->
                <DockPanel Grid.Row="0" Grid.Column="1" Margin="0 24 0 0">
                    <!--Room name-->
                    <Button HorizontalAlignment="Left" VerticalAlignment="Center"
                            Content="{Binding Path=Room.Name}" />

                    <!--Lease Id-->
                    <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Margin="16 0 0 4"
                               FontSize="36" FontWeight="Light"
                               Text="{Binding LeaseId, Converter={StaticResource LeaseIdStringDisplayConverter}}" />

                    <!--Delete button-->
                    <Button DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Margin="8 0 16 0" Padding="8" Height="Auto"
                            Style="{DynamicResource MaterialDesignToolButton}"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            FontSize="18"
                            Content="XÓA"
                            cal:Message.Attach="PreviewDelete" />

                    <!--Save button-->
                    <Button DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Center"
                            Padding="8" Height="Auto"
                            Style="{DynamicResource MaterialDesignToolButton}"
                            Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}"
                            FontSize="18"
                            Content="LƯU"
                            cal:Message.Attach="PreviewSave" />
                </DockPanel>

                <!--Content-->
                <DockPanel Grid.Row="1" Grid.Column="1" Margin="0 0 0 20">

                    <!--Room price-->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.7"
                                   Text="ĐƠN GIÁ" Margin="0 0 8 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.9"
                                   Text="{Binding RoomUnitPrice, Converter={StaticResource DecimalToCurrencyStringConverter}}" />
                    </StackPanel>

                    <!--Begin day-->
                    <StackPanel Margin="16 0 0 0" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.7"
                                   Text="BẮT ĐẦU THUÊ" Margin="0 0 8 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.9"
                                   Text="{Binding CheckinDate, Converter={StaticResource DateTimeToShortDateStringConverter}}" />
                    </StackPanel>

                    <!--Number of used days-->
                    <StackPanel Margin="16 0 0 0" Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.7"
                                   Text="ĐÃ Ở" Margin="0 0 8 0" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.9"
                                   Text="{Binding NumberOfUsedDays}" />
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"
                                   FontSize="15"
                                   Opacity="0.9"
                                   Text=" NGÀY" />
                    </StackPanel>
                </DockPanel>
            </Grid>
        </materialDesign:ColorZone>

        <StackPanel Grid.Row="1" Margin="4 0 4 0">
            <!--Room select-->
            <StackPanel Margin="16 24 16 0">
                <TextBlock Text="Phòng" IsEnabled="False"
                           Foreground="{DynamicResource PrimaryHueDarkBrush}"
                           FontSize="15" Margin="0 0 0 4" />
                <ComboBox materialDesign:HintAssist.Hint="Tên phòng"
                          FontSize="35"
                          ItemsSource="{Binding Rooms}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding Room, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>

            <!--Expected checkout day and room category-->
            <StackPanel Margin="16 24 16 0" Orientation="Horizontal">
                <!--Expected checkout date-->
                <StackPanel>
                    <TextBlock Text="Ngày dự kiến trả" IsEnabled="False"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"
                               FontSize="15" Margin="0 0 0 4" />
                    <DatePicker FontSize="15" Width="130" HorizontalAlignment="Left"
                                SelectedDate="{Binding ExpectedCheckoutDate, Mode=TwoWay}"
                                materialDesign:HintAssist.Hint="Ngày dự kiến trả" FirstDayOfWeek="Monday" />
                </StackPanel>

                <!--Room category-->
                <StackPanel Margin="80 0 0 0">
                    <TextBlock Text="Loại phòng" IsEnabled="False"
                               Foreground="{DynamicResource PrimaryHueDarkBrush}"
                               FontSize="15" Margin="0 0 0 4" />
                    <materialDesign:Chip
                        Content="{Binding Path=Room.CategoryName}"
                        FontSize="15"
                        IconForeground="White">
                        <materialDesign:Chip.Icon>
                            <materialDesign:PackIcon
                                Kind="HomeVariant"
                                Width="24" Height="24" />
                        </materialDesign:Chip.Icon>
                    </materialDesign:Chip>
                </StackPanel>

            </StackPanel>

            <!--Details-->
            <StackPanel Margin="16 24 16 0">
                <TextBlock Text="Danh sách khách hàng" IsEnabled="False"
                           Foreground="{DynamicResource PrimaryHueDarkBrush}"
                           FontSize="15" Margin="0 0 0 4" />
                <DataGrid CanUserSortColumns="False" CanUserAddRows="True" CanUserDeleteRows="True"
                          CanUserResizeColumns="True" AutoGenerateColumns="False"
                          materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                          ItemsSource="{Binding Details}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Số giấy tờ"
                                            EditingElementStyle="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}"
                                            Binding="{Binding CustomerLicenseId}" />
                        <DataGridTextColumn Header="Tên"
                                            EditingElementStyle="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}"
                                            Binding="{Binding CustomerName}" />
                        <materialDesign:MaterialDataGridComboBoxColumn Header="Loại khách"
                                                                       ItemsSourceBinding="{Binding CustomerCategories}"
                                                                       SelectedItemBinding="{Binding CustomerCategory}"/>
                        <DataGridTextColumn Header="Địa chỉ"
                                            EditingElementStyle="{DynamicResource MaterialDesignDataGridTextColumnEditingStyle}"
                                            Binding="{Binding CustomerAddress}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <!--Commands-->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 16 0 0">
                <Button DockPanel.Dock="Right" HorizontalAlignment="Right"
                        Style="{DynamicResource MaterialDesignFlatAccentButton}"
                        Content="THANH TOÁN"
                        Margin="8" Height="36" Padding="8"
                        cal:Message.Attach="PreviewOrder" />
            </StackPanel>


        </StackPanel>


    </Grid>
</UserControl>